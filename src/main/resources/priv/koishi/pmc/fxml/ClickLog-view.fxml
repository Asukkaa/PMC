<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<ScrollPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" stylesheets="@../css/Styles.css"
            fx:controller="priv.koishi.pmc.Controller.ClickLogController" fx:id="scrollPane_Log">
    <AnchorPane>
        <VBox spacing="10" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="25">
            <HBox spacing="10">
                <Button fx:id="removeAll_Log" onAction="#removeAll" style="-fx-cursor: hand"
                        text="%listText.removeAll"/>

                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="dataNumber_Log" text="%listText.null"/>
            </HBox>

            <TableView fx:id="tableView_Log">
                <placeholder>
                    <Label text="%clickLog.tableView_Log"/>
                </placeholder>

                <columns>
                    <TableColumn fx:id="index_Log" text="%listText.index" sortable="false"/>
                    <TableColumn fx:id="date_Log" text="%clickLog.date" sortable="false"/>
                    <TableColumn fx:id="name_Log" text="%clickLog.name" sortable="false"/>
                    <TableColumn fx:id="type_Log" text="%clickLog.type" sortable="false"/>
                    <TableColumn fx:id="X_Log" text="%clickLog.X" sortable="false"/>
                    <TableColumn fx:id="Y_Log" text="%clickLog.Y" sortable="false"/>
                    <TableColumn fx:id="clickTime_Log" text="%clickLog.clickTime" sortable="false"/>
                    <TableColumn fx:id="clickKey_Log" text="%clickLog.clickKey" sortable="false"/>
                    <TableColumn fx:id="result_Log" text="%clickLog.result" sortable="false"/>
                </columns>
            </TableView>
        </VBox>
    </AnchorPane>
</ScrollPane>
