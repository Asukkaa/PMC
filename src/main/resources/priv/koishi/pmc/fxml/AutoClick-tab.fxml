<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane fx:id="anchorPane_Click" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            stylesheets="@../css/Styles.css" fx:controller="priv.koishi.pmc.Controller.AutoClickController">
    <VBox spacing="10" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="30">
        <HBox spacing="10">
            <Label prefWidth="300" fx:id="mousePosition_Click"/>

            <!--提示：1 秒 = 1000 毫秒  列表中每条数据为一步，每步可操作多次-->
            <Label textFill="coral" text="%autoClick.tip"/>

            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="cancelTip_Click" textFill="red"/>
        </HBox>

        <HBox spacing="10">
            <HBox prefWidth="500" spacing="10">
                <!--选择导出文件夹-->
                <Button fx:id="addOutPath_Click" onAction="#addOutPath" text="%autoClick.addOutPath_Click"/>
                <Label fx:id="outPath_Click" style="-fx-font-size: 15px;"/>
            </HBox>

            <!--导出自动流程文件名称:-->
            <Label text="%autoClick.outFileName"/>
            <TextField fx:id="outFileName_Click" prefWidth="200"/>
            <!--导出后打开文件夹-->
            <CheckBox fx:id="openDirectory_Click" selected="true" text="%autoClick.openDirectory_Click"/>
            <!--文件重名不覆盖-->
            <CheckBox fx:id="notOverwrite_Click" selected="true" text="%autoClick.notOverwrite_Click"/>
        </HBox>

        <HBox spacing="10">
            <HBox prefWidth="500" spacing="10">
                <!--添加操作流程-->
                <Button fx:id="addPosition_Click" onAction="#addPosition" text="%autoClick.addPosition_Click"/>
                <!--导入操作流程-->
                <Button fx:id="loadAutoClick_Click" onAction="#loadAutoClick" text="%autoClick.loadAutoClick_Click"/>
                <!--以文件夹的形式导入操作流程-->
                <CheckBox fx:id="loadFolder_Click" text="%autoClick.loadFolder_Click"/>
            </HBox>

            <!--导出操作流程-->
            <Button fx:id="exportAutoClick_Click" onAction="#exportAutoClick" text="%autoClick.exportAutoClick_Click"/>
            <!--清空列表-->
            <Button fx:id="clearButton_Click" onAction="#removeAll" text="%listText.removeAll"/>
        </HBox>

        <HBox spacing="10">
            <!--录制自动操作前准备时间:-->
            <Label text="%autoClick.preparationRecordTime"/>
            <TextField fx:id="preparationRecordTime_Click" prefWidth="50"/>
            <!--秒-->
            <Label text="%unit.s"/>
            <!--录制自动操作-->
            <Button fx:id="recordClick_Click" onAction="#recordClick" text="%autoClick.recordClick_Click"
                    styleClass="cadetblue-button"/>

            <!--运行自动操作前准备时间:-->
            <Label text="%autoClick.preparationRunTime"/>
            <TextField fx:id="preparationRunTime_Click" prefWidth="50"/>
            <!--秒-->
            <Label text="%unit.s"/>
            <!--运行自动操作-->
            <Button fx:id="runClick_Click" onAction="#runClick" text="%autoClick.runClick_Click"
                    styleClass="cornflowerblue-button"/>

            <!--循环次数:-->
            <Label text="%autoClick.loopTime"/>
            <TextField fx:id="loopTime_Click" prefWidth="80"/>
            <!--次-->
            <Label text="%unit.times"/>

            <!--查看运行记录-->
            <Button fx:id="clickLog_Click" onAction="#clickLog" text="%autoClick.clickLog_Click"/>

            <Region HBox.hgrow="ALWAYS"/>
            <!--列表为空-->
            <Label fx:id="dataNumber_Click" text="%listText.null"/>
        </HBox>

        <TableView fx:id="tableView_Click" onDragDropped="#handleDrop" onDragOver="#acceptDrop">
            <placeholder>
                <!--拖拽操作流程文件或点击导入操作流程即可追加操作流程，设置操作流程后点击添加操作流程即可新增自定义流程-->
                <Label text="%autoClick.tableView_Click"/>
            </placeholder>

            <columns>
                <!--序号-->
                <TableColumn fx:id="index_Click" text="%listText.index" sortable="false"/>
                <!--要识别的图像-->
                <TableColumn fx:id="thumb_Click" text="%autoClick.thumb_Click" sortable="false"/>
                <!--步骤名称-->
                <TableColumn fx:id="name_Click" text="%autoClick.name_Click" sortable="false"/>
                <!--操作时长-->
                <TableColumn fx:id="clickTime_Click" text="%autoClick.clickTime_Click" sortable="false"/>
                <!--操作次数-->
                <TableColumn fx:id="clickNum_Click" text="%autoClick.clickNum_Click" sortable="false"/>
                <!--执行前等待时间-->
                <TableColumn fx:id="waitTime_Click" text="%autoClick.waitTime_Click" sortable="false"/>
                <!--操作按键-->
                <TableColumn fx:id="clickKey_Click" text="%autoClick.clickKey_Click" sortable="false"/>
                <!--操作类型-->
                <TableColumn fx:id="clickType_Click" text="%autoClick.clickType_Click" sortable="false"/>
                <!--图像识别匹配逻辑-->
                <TableColumn fx:id="matchedType_Click" text="%autoClick.matchedType_Click" sortable="false"/>
                <!--图像识别重试逻辑-->
                <TableColumn fx:id="retryType_Click" text="%autoClick.retryType_Click" sortable="false"/>
            </columns>
        </TableView>

        <VBox>
            <HBox spacing="10">
                <ProgressBar fx:id="progressBar_Click" visible="false" progress="0.0"/>

                <Region HBox.hgrow="ALWAYS"/>
                <!--设置操作步骤后上下拖拽数据行可调整数据顺序，右键点击数据行可进行调整操作，双击单元格可进行编辑，按住 shift 可多选-->
                <Label fx:id="tip_Click" prefHeight="20" textFill="red" text="%autoClick.tip_Click"/>
            </HBox>

            <HBox fx:id="logHBox_Click" spacing="10">
                <Label fx:id="log_Click" style="-fx-pref-height: -1"/>

                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="err_Click" textFill="red" style="-fx-pref-height: -1"/>
            </HBox>
        </VBox>
    </VBox>
</AnchorPane>
